<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".D2W_Switcher" >

    <ToggleButton
        android:id="@+id/togglebutton_d2w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/d2w_on"
        android:textOff="@string/d2w_off"
        android:onClick="d2wToggleClicked"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:text="@string/Recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/Recovery"
        android:layout_above="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Flash"
        android:onClick="flashRecovery"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/d2wS"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Download"
        android:onClick="downloadRecovery"
        android:layout_above="@+id/flash"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/about_d2wS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/d2wS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_above="@+id/download"
        android:layout_alignParentStart="true">

        <RadioButton android:id="@+id/radio_CWM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CWM"
            android:onClick="onRadioButtonClicked"
            android:layout_weight="1" />

        <RadioButton android:id="@+id/radio_PhilZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PhilZ"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked" />

        <RadioButton android:id="@+id/radio_TWRP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TWRP"
            android:onClick="onRadioButtonClicked"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>
